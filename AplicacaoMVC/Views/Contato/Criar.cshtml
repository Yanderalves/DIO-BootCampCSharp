@model AplicacaoMVC.Models.Contato

@{
    ViewData["Title"] = "Edição de contato";
}

<body>
    <div class="container">
        <div class="mt-3">
            <h1>Cadastre um contato</h1>
        </div>
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" type="name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="form email" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" type="number" class="form-control" placeholder="(99) 9999-9999">
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input asp-for="Ativo" class="form-check-input" type="checkbox">
            </div>
            <div class="form-group">
                <button asp-action="Criar" type="submit" class="btn btn-primary">Enviar</button>
                <button asp-action="Index" type="menu" class="btn btn-danger">Voltar</button>
            </div>
        </form>
    </div>
</body>

</html>
